<div class="container-fluid" style="margin-top:10%">
  <div class="col-md-4"></div>
  <div class="col-md-4">
    <div class="jumbotron well">
       <h2>活動報名</h2>

       <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:multipart => true}) do |f| %>
       <%= f.error_notification %>
        <%= f.label :photo, "大頭貼照" %><br>
         <%= f.label :photo do %>
           <%= f.file_field :photo %>
           <%= f.hidden_field :photo_cache %>
         <%end%>
         <%= f.input :name, required: true, autofocus: true , label:'姓名'%>
         <%= f.label :gender, "性別" %><br>
         <%= f.radio_button :gender, true %> 男
         <%= f.radio_button :gender, false %> 女
         <%= f.input :grade, required: true, label:'系級 EX:一' %>
         <%= f.input :email, required: true, label: '電子郵件地址' %>
         <%= f.input :password, required: true,label: '密碼', hint: ("最短必須為#{@minimum_password_length}字元" if @minimum_password_length) %>
         <%= f.input :password_confirmation, label: '密碼確認', required: true %>
          
       </div>
        <div class="form-actions">
            <%= f.button :submit, "提交" %>
        </div>
      
       <% end %>
    </div>
  </div>
  <div class="col-md-4"></div>
</div>
