<div class="container-fluid" style="margin-top:5%;background-image:url(//i.imgur.com/RAgvZ31.jpg);height:100%">
<div><%= notice_message %></div>
  <div class="col-md-7"></div>
  <div class="col-md-4">
    <h2>　　登入</h2><br>
    <div class="jumbotron well" style="opacity:0.9">


      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email, required: false, autofocus: true, label: '電子郵件地址'%>
          <%= f.input :password, required: false, label: '密碼'%>
          <%= f.input :remember_me, label: '記住我？', as: :boolean if devise_mapping.rememberable?  %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "登入" %>
        </div>
      <% end %>
      <br>
      <%= render "devise/shared/links" %>

    </div>
  </div>
  <div class="col-md-1"></div>
  <div class="col-md-12"><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br></div>

</div>